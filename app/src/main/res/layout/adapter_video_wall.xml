<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <RelativeLayout
        android:id="@+id/reImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/iv_seat_bitmap"/>

        <ImageView
            android:id="@+id/ivVideo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/iv_play"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llTop"
        android:padding="8dp"
        android:background="@drawable/bg_video_top_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/ivLocation"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/iv_location_white" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textColor="#b2ffffff"
            android:textSize="@dimen/level_5" />
    </LinearLayout>

    <TextView
        android:layout_below="@+id/reImage"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/level_4" />

    <RelativeLayout
        android:layout_below="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivPortrait"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/iv_portrait"/>

        <TextView
            android:layout_toRightOf="@+id/ivPortrait"
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_color4"
            android:textSize="@dimen/level_5" />

        <ImageView
            android:id="@+id/ivTime"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/iv_time"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvTime"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/level_5"
            android:textColor="@color/text_color4"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivPraise"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/ivPraise"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/iv_unlike"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvPraise"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tvPraise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/level_4"
            android:textColor="@color/text_color4"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivComment"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/ivComment"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/iv_msg"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvComment"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/level_4"
            android:textColor="@color/text_color4"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>