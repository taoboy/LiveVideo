<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical" >

    <include
        android:id="@+id/reTitle"
        layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reTitle"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/llUseHelp"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/selector_cell"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/use_help"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/level_4" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="18dip"
                android:src="@drawable/iv_arrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#20ffffff"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llPushNews"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/push_news"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/level_4" />

            <ImageView
                android:id="@+id/ivPushNews"
                android:layout_width="60dip"
                android:layout_height="20dip"
                android:background="@drawable/setting_checkbox_on" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#20ffffff" />

        <LinearLayout
            android:id="@+id/llLocalSave"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/selector_cell"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/local_save"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/level_4" />

            <TextView
                android:id="@+id/tvLocalSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/level_4" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="18dip"
                android:src="@drawable/iv_arrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#20ffffff" />

        <LinearLayout
            android:id="@+id/llLocalCache"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/selector_cell"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/local_cache"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/level_4" />

            <TextView
                android:id="@+id/tvLocalCache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/level_4" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="18dip"
                android:src="@drawable/iv_arrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#20ffffff" />

        <LinearLayout
            android:id="@+id/llSwitch"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/selector_cell"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/switch_source"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/level_4" />

            <TextView
                android:id="@+id/tvDataResource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/level_4" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="18dip"
                android:src="@drawable/iv_arrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#20ffffff" />

        <LinearLayout
            android:id="@+id/llVideoView"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/selector_cell"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="天气网眼在线点播"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/level_4" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="18dip"
                android:src="@drawable/iv_arrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#20ffffff"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/selector_login"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="@string/logout"
        android:textColor="@color/white"
        android:textSize="@dimen/level_3" />

</RelativeLayout>