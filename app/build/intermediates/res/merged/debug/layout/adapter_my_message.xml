<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_cell"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:id="@+id/rePortrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/ivPortrait"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/ivPortrait"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朱小北"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/level_5" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-07-18 12:50"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/level_5" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="作品上传成功，增加1积分！"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/level_5" />

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="30dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:background="@drawable/score_bg"
            android:gravity="center"
            android:text="+2"
            android:textColor="@color/text_color1"
            android:textSize="12dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llVideo"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dip"
                android:layout_height="100dip"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/ivVideo"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_centerInParent="true"
                android:src="@drawable/iv_video_logo"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/ivLocation"
                    android:layout_width="13dip"
                    android:layout_height="13dip"
                    android:src="@drawable/iv_location_blue" />

                <TextView
                    android:id="@+id/tvPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="北京  东城"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/level_5" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="13:02"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/level_5" />

            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="2dip"
                android:background="#20ffffff" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:maxLines="3"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="测试标题"
                android:textColor="@color/black"
                android:textSize="@dimen/level_5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>