<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_cell"
              android:orientation="vertical"
              android:padding="5dp" >

    <RelativeLayout
        android:id="@+id/rePortrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/ivPortrait"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/ivPortrait"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朱小北"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/level_5" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-07-18 12:50"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/level_5" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="作品上传成功，增加1积分！"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/level_5" />

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="30dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:background="@drawable/score_bg"
            android:gravity="center"
            android:text="+2"
            android:textColor="@color/text_color1"
            android:textSize="12dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llVideo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/ivVideo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:src="@drawable/iv_play"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="测试标题"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_5" />

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:text="北京  东城"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/level_5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>